@model IEnumerable<UserViewModel>

<h1>Admin Dashboard</h1>
<a asp-action="RegisterNewUser" class="btn btn-primary">Register New User</a>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@(user.Admin ? "Yes" : "No")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
